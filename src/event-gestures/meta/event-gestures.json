{
    "event-gestures": {
        "use": ["event-flick", "event-move", "event-drag"],
        "submodules": {
            "event-flick": {
                "requires": [
                    "node-base",
                    "event-touch",
                    "event-synthetic"
                ]
            },

            "event-move": {
                "requires": [
                    "node-base",
                    "event-touch",
                    "event-synthetic"
                ]
            },
            "event-drag": {
                "requires": [
                    "event-move"
                ]
            }
        }
    }
}
